/* pages/community/release.wxss */
Page{
  background: #fefefe;
}
.up-img {
  padding: 20rpx 10rpx;
  overflow: hidden;
}

.section {
  width: 100%;
  height: 380rpx;
  padding: 0 15rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.placeholder {
  color: #8a8a8a;
  font-size: 28rpx;
}

.txt {
  flex: 1;
  width: 100%;
  height: 290rpx;
  /* min-height: 290rpx; 这种写法也可以 */
  overflow: auto;
  /* background: #fff; */
  font-size: 28rpx;
  color: #242528;
}

.txtTip {
  width: 100%;
  /* height: 50rpx; */
  padding: 10rpx 20rpx;
  color: #8a8a8a;
  font-size: 26rpx;
  text-align: right;
}

.commit {
  width: 100%;
  margin-top: 75rpx;
  text-align: center;
}

.commit .ok {
  width: 38%;
  height: 75rpx;
  line-height: 75rpx;
  background: #373737;
  font-size: 28rpx;
  color: #fff;
}

.line{
  background: #efefef;
  width: 100%;
  height: 20rpx;
}