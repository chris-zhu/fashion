/* pages/community/index.wxss */

Page {
  background-color: #f6f6f6;
}

.recommendBox {
  width: 100%;
  height: 290rpx;
  overflow: auto;
  padding: 20rpx 0;
}

.recommendBox .recommendUsers {
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
  width: fit-content;
}

.recommendUsers .user-item {
  width: 170rpx;
  height: 100%;
  /* border: 1rpx solid; */
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

.user-item  image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-item .username {
  width: 100%;
  color: #242528;
  font-size: 26rpx;
  text-align: center;
  padding: 0 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.user-item .follow {
  width: 110rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  border: 1rpx solid #242528;
  color: #242528;
  text-align: center;
  font-size: 26rpx;
}

.user-item .followY {
  width: 110rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  border: 1rpx solid #8a8a8a;
  color: #8a8a8a;
  text-align: center;
  font-size: 26rpx;
}

.content {
  width: 100%;
  padding: 10rpx 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.content .left, .content .right {
  width: 49%;
}

/* 推荐 */

swiper {
  width: 100%;
  /* height: 290rpx; */
  overflow: hidden;
}

.superTalk {
  padding: 20rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  /* align-content: space-around; */
  flex-wrap: wrap;
}

.superTalk .talk-item {
  border-radius: 10rpx;
  padding: 0 10rpx;
  background: #fff;
  width: 48%;
  height: 123rpx;
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}

.talk-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.talk-item .talk-info {
  width: 60%;
  height: 100rpx;
  margin-left: 20rpx;
}

.talk-info .info-title {
  font-size: 30rpx;
  color: #242528;
  font-weight: 600;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 6rpx;
}

.talk-info .info-desc {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top: 14rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.transparent-line {
  width: 100%;
  height: 10rpx;
  background: transparent;
}

.fabu{
  width: 104rpx;
  padding: 8rpx 10rpx;
  background: #c22a2c;
  position: fixed;
  /* right: -58rpx; */
  bottom: 115rpx;
  /* opacity: 1; */
  border-top-left-radius:30rpx;
  border-bottom-left-radius:30rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all ease-in-out 0.3s;
}