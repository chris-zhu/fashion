page {
    background-color: #fff;
}
.locList{
  width: 100%;
  padding: 10rpx 20rpx;
}
.locList .loc-item{
  padding: 20rpx 0;
  width: 100%;
  position: relative;
  border-bottom: 1rpx solid #f4f4f4;
  display: flex;
  flex-direction: column;

}
.loc-item .loc-name{
  font-size: 28rpx;
  color: #242528;
}
.loc-name.t{
  padding: 20rpx 0;
}
.loc-item .loc-desc{
  font-size: 24rpx;
  color: #666;
  padding-top: 14rpx;
}
.selected{
  position: absolute;
  color: #2c9f67;
  right: 5%;
  top: 50%;
  transform: translateY(-50%);
  font-size: 38rpx;
}
.show{
  width: 100%;
  /* height: 500rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}
.show image{
  width: 300rpx; 
}
.show text{
  font-size: 24rpx ;
  color: #666;
}
.show .openLocation{
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  background: #373737;
  color: #fff;
  margin-top: 30rpx;
}


