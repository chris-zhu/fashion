/* pages/mine/signin.wxss */

page {
  background: #fff;
}

.sign-ruler {
  display: flex;
  align-items: center;
}

.switch {
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}

.signbox {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.signbox .tip-img {
  width: 360rpx;
  height: 270rpx;
}

.signbox .signBtn {
  width: 30%;
  height: 60rpx;
  background: #373737;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}
.tips{
  width: 95%;
  margin: 0 auto;
  padding: 10rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #272727;
  color: #242528;
  margin-top: 40rpx;
  font-size: 28rpx;
}
.stepBox {
  margin: 20rpx 0;
}
