/* pages/coinShop/goodsDetail.wxss */

page {
  background-color: #f6f6f6;
  padding-bottom: 100rpx;
}

.toutu {
  width: 100%;
  height: 320rpx;
}

.title, .desc {
  padding: 10px 20px;
  border-bottom: #f1f1f1 1px solid;
  font-size: 30rpx;
  color: #242528;
  background: #fff;
}

.desc {
  border: none;
  font-size: 26rpx;
}

.reciveTips {
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  background-color: #fff;
  color: #333;
  line-height: 48rpx;
  /* border-bottom: #f1f1f1 1px solid; */
}

.reciveTips .tipTitle {
  font-size: 28rpx;
  color: #242528;
  font-weight: 550;
  margin-right: 20rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}

.footer .price {
  font-size: 32rpx;
  color: #f7cf46;
  width: 210rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: #fff;
}

.footer .buy {
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  background: #afafaf;
  color: #fff;
  font-size: 32rpx;
}
